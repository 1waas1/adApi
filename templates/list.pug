html
    head
        title Title
    body
        ul
            li Текущая сортировка
            li
                a(href=fieldSort.href) #{fieldSort.name}
            li
                a(href=paramSort.href) #{paramSort.name}

        each item in adsList
            div
                h2
                    a(href='/ads-item/'+item.id) #{item.title}
                img(src=item.images)
        div
            if currentPage <= quantityPages && currentPage > 1
                a(href=paginationLinks.prev) Назад
            br
            if currentPage < quantityPages
                a(href=paginationLinks.next) Дальше
